<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.apimgt</groupId>
        <artifactId>org.wso2.carbon.apimgt.ui</artifactId>
        <version>9.0.183-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.apimgt.ui.portals</artifactId>
    <packaging>pom</packaging>
    <version>9.0.183-SNAPSHOT</version>
    <name>WSO2 API Manager UI Portals - Parent</name>
    <url>https://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.ui.publisher</artifactId>
            <version>${project.parent.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.ui.devportal</artifactId>
            <version>${project.parent.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.ui.admin</artifactId>
            <version>${project.parent.version}</version>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.apimgt.ui.portals</id>
                            <propertiesFile>portals/build/etc/feature.properties</propertiesFile>
                            <includedFeatures>
                                <includedFeatureDef>
                                    org.wso2.carbon.apimgt:org.wso2.carbon.apimgt.ui.publisher:${project.parent.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.apimgt:org.wso2.carbon.apimgt.ui.devportal:${project.parent.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.apimgt:org.wso2.carbon.apimgt.ui.admin:${project.parent.version}
                                </includedFeatureDef>
                            </includedFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
